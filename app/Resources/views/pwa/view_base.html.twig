{# These must always be imported #}
<link rel="import" href="../../bower_components/polymer/polymer-element.html">
<link rel="import" href="/pwa/src/shared-styles.html">

{% if imports is defined %}
    {% for import in imports %}
        <link rel="import" href="{{ import }}">
    {% endfor %}
{% endif %}

<dom-module id="my-{{ page.id }}">
    <template>
        <style include="shared-styles">
            :host {
                display: block;
                padding: 10px;
            }
        </style>

        {% block content '' %}
    </template>

    <script>
		class My{{ page.objectName|capitalize }} extends Polymer.Element {
			static get is() { return 'my-{{ page.id }}'; }
		}

		window.customElements.define(My{{ page.objectName|capitalize }}.is, My{{ page.objectName|capitalize }});
    </script>
</dom-module>
